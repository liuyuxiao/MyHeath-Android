<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip"
    android:paddingLeft="12dip"
    android:paddingRight="2dip" >
    <TextView
        android:id="@+id/myquestion_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="18dip" />
     <View  
        android:id="@+id/question_edge"
        android:layout_height="2dip"
        android:layout_width="120dip"
        android:background="#FF909090"
        android:layout_below="@id/myquestion_title_textview" />
    
    <TextView
        android:id="@+id/myquestion_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="12dip"
        android:layout_below="@id/question_edge" />
    <TextView
        android:id="@+id/myquestion_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="15dip"
        android:layout_below="@id/myquestion_time_textview" />
    <TextView
        android:id="@+id/myanswer_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="15dip"
        android:layout_below="@id/myquestion_description_textview" />
    <View  
        android:id="@+id/answer_edge"
        android:layout_height="2dip"
        android:layout_width="60dip"
        android:background="#FF909090"
        android:layout_below="@id/myanswer_name_textview" />
    <TextView
        android:id="@+id/myanswer_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="12dip"
        android:layout_below="@id/answer_edge" />
    <TextView
        android:id="@+id/myanswer_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textColor="@color/black"
        android:textSize="15dip"
        android:layout_below="@id/myanswer_time_textview" />
</RelativeLayout>