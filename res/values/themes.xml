<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sherlock.Theme.Light.Green" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.Widget.ActionBar.Menu</item>
        <item name="actionBarTabStyle">@style/Widget.Holo.ActionBar.TabView</item>
        <item name="actionBarTabBarStyle">@style/Widget.Holo.ActionBar.TabBar</item>
        <item name="actionBarItemBackground">@drawable/common_ade_green_bg</item>
        <!--
        item name="actionBarSize">@dimen/action_bar_tab_height</item>
        <item name="android:actionBarSize">@dimen/action_bar_tab_height</item        -->
        <item name="actionBarTabTextStyle">@style/Widget.Holo.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Holo.ActionBar.TabText</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="backgroundStacked">@drawable/aa_tab_background</item>
        <!-- 
        <item name="android:background">@drawable/nav_bar_bg</item>
        <item name="background">@drawable/nav_bar_bg</item>
        <item name="titleTextStyle">@style/phoenix.ActionBar.Title</item>
         -->
    </style>

    <style name="phoenix.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/action_bar_title_text_color</item>
    </style>
    
    <style name="TextAppearance.Widget.ActionBar.Menu" parent="TextAppearance.Sherlock.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Widget.Holo.ActionBar.TabView" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/aa_tab_indicator_holo</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Widget.Holo.ActionBar.TabBar" parent="android:Widget.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
        <!-- item name="android:background">@color/white</item -->
    </style>

    <style name="Widget.Holo.ActionBar.TabText" parent="android:Widget.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>